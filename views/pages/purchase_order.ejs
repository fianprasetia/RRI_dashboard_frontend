<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>

  <body>
    <div id="page-container" class="sidebar-o sidebar-dark enable-page-overlay side-scroll page-header-fixed page-footer-fixed sidebar-o side-trans-enabled">
      <nav id="sidebar" aria-label="Main Navigation"><%- include('../partials/navigasi'); %></nav>
      <!-- END Sidebar -->

      <!-- Header -->
      <header id="page-header">
        <!-- Header Content -->
        <%- include('../partials/header'); %>
      </header>
      <!-- END Header -->

      <!-- Main Container -->
      <main id="main-container">
        <!-- Page Content -->
        <div class="content">
          <h4 id="POPage" class="content-heading text-uppercase"></h4>
          <div class="block block-rounded">
            <div class="block-header">
              <!-- <h3 class="block-title">add</h3> -->
              <div class="block-title">
                <!-- <button title="Add" type="submit" onclick="showModalInsertUsers()"
                                class="btn btn-outline-light">
                                <i class="fa-solid fa-plus"></i>
                            </button> -->
              </div>
              <div class="block-options">
                <button type="button" class="btn-block-option" data-toggle="block-option" data-action="fullscreen_toggle"></button>
              </div>
            </div>
            <div class="block-content block-content-full">
              <div id="caritanggal" class="row content-heading">
                <div class="col-sm-6">
                  <div class="mb-2">
                    <!-- <label id="dateLabel" class="form-label text-uppercase" for="code">Date</label> -->
                    <div class="input-daterange input-group" data-date-format="dd-mm-yyyy" data-week-start="1" data-autoclose="true" data-today-highlight="true">
                      <input type="text" class="form-control" id="startDate" name="startDate" placeholder="From" data-week-start="1" data-autoclose="true" data-today-highlight="true" />
                      <span class="input-group-text fw-semibold">
                        <i class="fa fa-fw fa-arrow-right"></i>
                      </span>
                      <input type="text" class="form-control" id="endDate" name="endDate" placeholder="To" data-week-start="1" data-autoclose="true" data-today-highlight="true" />
                    </div>
                  </div>
                </div>
                <div class="col-sm-3 mb-2">
                  <!-- <label class="form-label text-uppercase text-gray-lighter" for="code">.</label> -->
                  <div id="loadsearch">
                    <span onclick="SelectPurchaseOrderByDate()" class="input-group-text fw-semibold btn btn-primary">
                      <i class="fa-solid fa-magnifying-glass"></i>
                    </span>
                  </div>
                </div>
              </div>
              <div class="row table-responsive">
                <table class="table table-bordered table-striped table-vcenter js-dataTable-responsive">
                  <thead>
                    <tr>
                      <th class="text-center text-uppercase">#</th>
                      <th id="pRHeader" class="text-center text-uppercase" style="width: 100px;">Purchase Request</th>
                      <th id="pOHeader" class="text-center text-uppercase">Purchase Order</th>
                      <th id="worksiteHeader" class="text-center text-uppercase">Worksite</th>
                      <th id="purchasingHeader" class="text-center text-uppercase">Purchasing</th>
                      <th id="statusHeader" class="text-center text-uppercase">status</th>
                      <th id="actionsHeader" class="text-center text-uppercase">Actions</th>
                    </tr>
                  </thead>
                  <tbody id="dataTable"></tbody>
                </table>
              </div>
            </div>
          </div>
          <!-- END Store Growth -->
        </div>
      </main>
      <footer id="page-footer" class="bg-body-light"><%- include('../partials/footer'); %></footer>
    </div>
    <div class="modal" id="modalPO" tabindex="-1" role="dialog" aria-labelledby="modalPO" data-bs-backdrop="static" aria-hidden="true">
      <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
          <div class="block block-rounded block-themed block-transparent mb-0">
            <div class="block-header bg-primary-dark">
              <h3 id="titlePO" class="block-title">Modal Title</h3>
              <div class="block-options"></div>
            </div>
            <div class="block-content">
              <div class="row">
                <div class="col-sm-4 mb-2"></div>
                <div class="col-sm-4 mb-2"></div>
                <div class="col-sm-4 mb-2">
                  <span>
                    <h3 id="viewPO" class="text-uppercase mb-0">Purchase</h3>
                  </span>
                  <span id="codePO" class="text-uppercase mb-0"></span>
                </div>
              </div>
              <div class="row mb-4">
                <span>
                  <h5 id="namePartnersPO" class="text-uppercase mb-0">Purchase</h5>
                </span>
                <span id="addressPartnersPO" class="text-uppercase mb-0" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis; max-width: 600px"></span>
                <span id="cityPartnersPO" class="text-uppercase mb-0"></span>
                <span id="contactPersonPartnersPO" class="text-uppercase mb-0"></span>
                <span id="phonePartnersPO" class="text-uppercase mb-0"></span>
                <span id="emailPartnersPO" class="mb-0"></span>
              </div>
              <div class="row mb-4">
                <div>PURCHASE REQUEST #<span id="noPR"></span></div>
                <div class="row table-responsive mb-2">
                  <table id="dataTableItemMasterOrder" class="table table-striped table-vcenter">
                    <thead>
                      <tr>
                        <th class="text-center text-uppercase">#</th>
                        <th id="descriptionOrder" class="text-center text-uppercase">Description</th>
                        <th id="qtyOrder" class="text-center text-uppercase">Qty</th>
                        <th id="uomOrder" class="text-center text-uppercase" style="width: 150px">UNIT PRICE</th>
                        <th id="noteOrder" class="text-center text-uppercase" style="width: 150px">TOTAL</th>
                      </tr>
                    </thead>
                    <tbody id="dataTableItemMasterOrderDetail"></tbody>
                    <tfoot>
                      <tr>
                        <td id="subtotalFoot" class="text-end text-uppercase" colspan="4">SubTotal</td>
                        <td id="subTotalOrder" class="text-end text-uppercase"></td>
                      </tr>
                      <tr>
                        <td id="discountFoot" class="text-end text-uppercase" colspan="4">Diskon</td>
                        <td id="discountOrder" class="text-end text-uppercase"></td>
                      </tr>
                      <tr>
                        <td id="shippingFoot" class="text-end text-uppercase" colspan="4">Shipping Cost</td>
                        <td id="shippingOrder" class="text-end text-uppercase"></td>
                      </tr>
                      <tr>
                        <td colspan="4" class="text-end text-uppercase"><span id="taxFoot"></span> (<span id="persen"></span>%)</td>
                        <td id="taxOrder" class="text-end text-uppercase"></td>
                      </tr>
                      <tr>
                        <td id="grandTotalFoot" class="text-end text-uppercase" colspan="4">Grand Total</td>
                        <td id="grandTotalOrder" class="text-end text-uppercase"></td>
                      </tr>
                    </tfoot>
                  </table>
                </div>
                <div id="termCondition" class="text-uppercase">Term n Codition</div>
                <div id="dateCreatePO" style="display: flex; align-items: flex-start; width: 800px"></div>
                <div id="dateDeliveryPO" style="display: flex; align-items: flex-start; width: 800px"></div>
                <div id="currencyPO" style="display: flex; align-items: flex-start; width: 800px"></div>
                <div id="top" style="display: flex; align-items: flex-start; width: 800px"></div>
                <div id="receivingLocations" style="display: flex; align-items: flex-start; width: 800px"></div>
                <div id="notePO" style="display: flex; align-items: flex-start; width: 800px"></div>
              </div>
            </div>
            <div id="load" class="block-content block-content-full text-end bg-body">
              <a id="cancelBtn" onclick="closeModal()" class="btn btn-danger text-uppercase"></a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="modal" id="modalNotice" tabindex="-1" role="dialog" aria-labelledby="modalNotice" data-bs-backdrop="static" aria-hidden="true">
      <div class="modal-dialog modal-dialog-top" role="document">
        <div class="modal-content">
          <div class="block block-rounded block-themed block-transparent mb-0">
            <div class="block-header bg-primary-dark">
              <h3 id="titleContent" class="block-title">Modal Title</h3>
              <div class="block-options"></div>
            </div>
            <div id="contentNotice" class="block-content"></div>
            <div id="loadNotice" class="block-content block-content-full text-end bg-body"></div>
          </div>
        </div>
      </div>
    </div>
    <!-- Core Libraries (jQuery must be first) -->
    <script src="assets/js/lib/jquery.min.js"></script>
    <script src="assets/js/dashmix.app.min.js"></script>

    <!-- Application Core -->
    <script src="js/mainUrl.js"></script>
    <script src="lib/loadingPage.js"></script>
    <script src="lib/epps.js"></script>

    <!-- Plugin Libraries -->
    <!-- Form Controls & Validation -->
    <script src="assets/js/plugins/select2/js/select2.full.min.js"></script>
    <script src="assets/js/plugins/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
    <script src="assets/js/plugins/jquery.maskedinput/jquery.maskedinput.min.js"></script>
    <script src="assets/js/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="assets/js/plugins/jquery-validation/additional-methods.js"></script>

    <!-- Date/Time Pickers -->
    <script src="assets/js/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="assets/js/plugins/flatpickr/flatpickr.min.js"></script>

    <!-- Data Tables & Export -->
    <script src="assets/js/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="assets/js/plugins/datatables-bs5/js/dataTables.bootstrap5.min.js"></script>
    <script src="assets/js/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="assets/js/plugins/datatables-responsive-bs5/js/responsive.bootstrap5.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons/dataTables.buttons.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons-bs5/js/buttons.bootstrap5.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons-jszip/jszip.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons-pdfmake/pdfmake.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons-pdfmake/vfs_fonts.js"></script>
    <script src="assets/js/plugins/datatables-buttons/buttons.print.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons/buttons.html5.min.js"></script>

    <!-- Visualization & Notifications -->
    <script src="assets/js/plugins/chart.js/chart.umd.js"></script>
    <script src="assets/js/plugins/bootstrap-notify/bootstrap-notify.min.js"></script>

    <!-- Page Specific Scripts -->
    <script src="assets/js/pages/be_pages_dashboard.min.js"></script>

    <!-- Purchase Order Modules -->
    <script src="js/purchase_order/selectPurchaseOrder.js"></script>
    <script src="js/purchase_order/insertPurchaseOrder.js"></script>
    <script src="js/purchase_order/updatePurchaseOrder.js"></script>
    <script src="js/purchase_order/deletePurchaseOrder.js"></script>

    <!-- Initialization -->
    <script>
      Dashmix.helpersOnLoad(["js-flatpickr", "jq-datepicker", "jq-maxlength", "jq-select2", "jq-rangeslider", "jq-masked-inputs", "jq-pw-strength", "jq-notify"]);
    </script>
  </body>
</html>
