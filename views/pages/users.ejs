<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>

  <body>
    <div id="page-container" class="sidebar-o sidebar-dark enable-page-overlay side-scroll page-header-fixed page-footer-fixed sidebar-o side-trans-enabled">
      <nav id="sidebar" aria-label="Main Navigation"><%- include('../partials/navigasi'); %></nav>
      <!-- END Sidebar -->

      <!-- Header -->
      <header id="page-header">
        <!-- Header Content -->
        <%- include('../partials/header'); %>
      </header>
      <!-- END Header -->

      <!-- Main Container -->
      <main id="main-container">
        <!-- Page Content -->
        <div class="content">
          <h4 id="usersPage" class="content-heading text-uppercase"></h4>
          <div class="block block-rounded">
            <div class="block-header">
              <!-- <h3 class="block-title">add</h3> -->
              <div class="block-title">
                <button title="Add" type="submit" onclick="showModalInsertUsers()" class="btn btn-primary">
                  <i class="fa-solid fa-plus"></i>
                </button>
              </div>
              <div class="block-options">
                <button type="button" class="btn-block-option" data-toggle="block-option" data-action="fullscreen_toggle"></button>
              </div>
            </div>
            <div class="block-content block-content-full">
              <div id="rowUsers" class="row table-responsive">
                <table class="table table-bordered table-striped table-vcenter js-dataTable-responsive">
                  <thead>
                    <tr>
                      <th id="id_employee" class="text-center text-uppercase">employee_id</th>
                      <th id="fullname" class="text-center text-uppercase">Fullname</th>
                      <th id="username" class="text-center text-uppercase">Username</th>
                      <th id="location" class="text-center text-uppercase">Location</th>
                      <th id="access_web" class="text-center text-uppercase">Access Web Application</th>
                      <th id="access_mobile" class="text-center text-uppercase">Access Mobile Application</th>
                      <th id="status" class="text-center text-uppercase">Status</th>
                      <th id="actions" class="text-center text-uppercase">Actions</th>
                    </tr>
                  </thead>
                  <tbody id="dataTable"></tbody>
                </table>
              </div>
            </div>
          </div>
          <!-- END Store Growth -->
        </div>
      </main>
      <footer id="page-footer" class="bg-body-light"><%- include('../partials/footer'); %></footer>
    </div>
    <div class="modal" id="modalUsers" tabindex="-1" role="dialog" data-bs-backdrop="static" aria-labelledby="modalUsers" aria-hidden="true">
      <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
          <div class="block block-rounded block-themed block-transparent mb-0">
            <div class="block-header bg-primary-dark">
              <h3 id="titleUsers" class="block-title text-uppercase">Add Menu</h3>
              <div class="block-options">
                <button type="button" class="btn-block-option text-gray" data-toggle="block-option" data-action="fullscreen_toggle"></button>
              </div>
            </div>
            <form class="js-validation">
              <div class="block-content">
                <div class="col-sm-12 mb-2">
                  <label id="fullnameLabel" class="form-label text-uppercase" for="selectFullname">Full Name</label>
                  <select class="js-select2 form-select fw-light text-uppercase" name="selectFullname" id="selectFullname" style="width: 100%" data-container="#modalUsers"></select>
                </div>
                <div class="col-sm-12 mb-2">
                  <label id="usernameLabel" class="form-label text-uppercase" for="selectUsername">Username</label>
                  <input type="text" class="form-control fw-light" id="selectUsername" name="selectUsername" required />
                </div>
                <div id="passwordhide" class="col-sm-12 mb-2">
                  <label id="passwordLabel" class="form-label text-uppercase" for="password">Password</label>
                  <div class="input-group">
                    <input type="password" class="form-control fw-light" id="password" name="password" />
                    <span class="input-group-text bg-transparent" onclick="viewPassword('password','eyeIcon')" style="cursor: pointer">
                      <i class="fa-solid fa-eye-slash" id="eyeIcon"></i>
                    </span>
                  </div>
                </div>
                <div class="col-sm-12 mb-2">
                  <label id="locationLabel" class="form-label text-uppercase" for="selectLocation">Loction</label>
                  <select class="js-select2 form-select fw-light text-uppercase" name="selectLocation" id="selectLocation" style="width: 100%" data-container="#modalUsers"></select>
                </div>
                <div class="col-sm-12 mb-2">
                  <label id="access_webLabel" class="form-label text-uppercase" for="selectAccess_web">Access Web System</label>
                  <select class="js-select2 form-select fw-light text-uppercase" name="selectAccess_web" id="selectAccess_web" style="width: 100%" data-container="#modalUsers"></select>
                </div>
                <div class="col-sm-12 mb-2">
                  <label id="access_mobileLabel" class="form-label text-uppercase" for="selectAccess_mobile">Access Mobile System</label>
                  <select class="js-select2 form-select fw-light text-uppercase" name="selectAccess_mobile" id="selectAccess_mobile" style="width: 100%" data-container="#modalUsers"></select>
                </div>
                <div class="col-sm-12 mb-2">
                  <label id="statusLabel" class="form-label text-uppercase" for="selectStatusActive">Status</label>
                  <select class="js-select2 form-select fw-light text-uppercase" name="selectStatusActive" id="selectStatusActive" style="width: 100%" data-container="#modalUsers"></select>
                </div>
              </div>
              <div id="load" class="block-content block-content-full text-end bg-body"></div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="modal" id="modalUsersPassword" tabindex="-1" role="dialog" data-bs-backdrop="static" aria-labelledby="modalUsersPassword" aria-hidden="true">
      <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
          <div class="block block-rounded block-themed block-transparent mb-0">
            <div class="block-header bg-primary-dark">
              <h3 id="titleUsersPassword" class="block-title text-uppercase">Add Menu</h3>
              <div class="block-options">
                <button type="button" class="btn-block-option text-gray" data-toggle="block-option" data-action="fullscreen_toggle"></button>
              </div>
            </div>
            <form id="formPassword" class="js-validation formPassword">
              <div class="block-content">
                <div class="col-sm-12 mb-2">
                  <label id="usernameLabelPassword" class="form-label text-uppercase" for="selectUsernamePassword">Username</label>
                  <input type="text" class="form-control fw-light" id="selectUsernamePassword" name="selectUsernamePassword" />
                </div>
                <div class="col-sm-12 mb-2">
                  <label id="passwordLabel1" class="form-label text-uppercase" for="password1">Password</label>
                  <div class="input-group">
                    <input type="password" class="form-control fw-light" id="password1" name="password1" />
                    <span class="input-group-text bg-transparent" onclick="viewPassword('password1', 'eyeIcon1')">
                      <i class="fa-solid fa-eye-slash" id="eyeIcon1"></i>
                    </span>
                  </div>
                </div>
                <div class="col-sm-12 mb-2">
                  <label id="repasswordLabel2" class="form-label text-uppercase" for="password2">ReType Password</label>
                  <div class="input-group">
                    <input type="password" onkeyup="validatePassword()" class="form-control fw-light" id="password2" name="password2" />
                    <span class="input-group-text bg-transparent" onclick="viewPassword('password2', 'eyeIcon2')">
                      <i class="fa-solid fa-eye-slash" id="eyeIcon2"></i>
                    </span>
                  </div>
                  <span id="salah" style="color: red; font-size: 12px; margin-left: 10px"></span>
                </div>
              </div>
              <div id="loadpassword" class="block-content block-content-full text-end bg-body"></div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="modal" id="modalUsersAccess" tabindex="-1" role="dialog" data-bs-backdrop="static" aria-labelledby="modalUsersAccess" aria-hidden="true">
      <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
          <div class="block block-rounded block-themed block-transparent mb-0">
            <div class="block-header bg-primary-dark">
              <h3 id="titleUsersAccess" class="block-title text-uppercase">Add Menu</h3>
              <div class="block-options">
                <button type="button" class="btn-block-option text-gray" data-toggle="block-option" data-action="fullscreen_toggle"></button>
              </div>
            </div>
            <form id="formAccess" class="js-validation formAccess">
              <div id="tabList" class="block-content">
                <ul class="nav nav-tabs nav-tabs-alt" role="tablist">
                  <li class="nav-item">
                    <a class="nav-link space-x-1 active" onclick="headersMenuAccess('edit',cancel,done)" data-bs-toggle="tab" data-bs-target="#account-profile" role="tab" aria-controls="account-profile" aria-selected="true">
                      <i class="fa fa-user-circle d-sm-none"></i>
                      <span id="editMenu" class="d-none d-sm-inline">Edit Menu Access</span>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link space-x-1" onclick="headersMenuAccess('copy',cancel,done)" data-bs-toggle="tab" data-bs-target="#account-password" role="tab" aria-controls="account-password" aria-selected="false">
                      <i class="fa fa-asterisk d-sm-none"></i>
                      <span id="copyMenu" class="d-none d-sm-inline">Copy Menu Access</span>
                    </a>
                  </li>
                </ul>
                <div class="block-content tab-content">
                  <div class="tab-pane active" id="account-profile" role="tabpanel" aria-labelledby="account-profile-tab" tabindex="0">
                    <div id="rowAccess" class="row" hidden>
                      <div id="treeAccess" class="tree"></div>
                    </div>
                    <div hidden class="col-sm-12 mb-2">
                      <input type="text" class="form-control fw-light" id="selectUsernameAccess" name="selectUsernameAccess" />
                    </div>
                  </div>
                  <div class="tab-pane" id="account-password" role="tabpanel" aria-labelledby="account-password-tab" tabindex="0">
                    <div class="row push p-sm-2 p-lg-4">
                      <div class="offset-xl-1 col-xl-4 order-xl-1">
                        <p id="descriptionCopMenu" class="bg-body-light p-4 rounded-3 text-muted fs-sm">can copy access from another user by selecting the user you want to copy.</p>
                      </div>
                      <div class="col-xl-6 order-xl-0">
                        <div class="col-sm-12 mb-2">
                          <label id="usernameLabelCopy" class="form-label text-uppercase" for="selectUsernameCopy"></label>
                          <select value="" class="js-select2 form-select fw-light text-uppercase" name="selectUsernameCopy" id="selectUsernameCopy" style="width: 100%" data-container="#modalUsersAccess"></select>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div id="loadAccess" class="block-content block-content-full text-end bg-body"></div>
            </form>
          </div>
        </div>
      </div>
    </div>

