                    <input type="text" class="form-control fw-light" id="zipCode" name="zipCode" />
                  </div>
                  <div class="col-sm-4 mb-2">
                    <label id="nationalityLabel" class="form-label text-uppercase" for="nationality">Nationality</label>
                    <select class="js-select2 form-select fw-light text-uppercase" name="nationality" id="nationality" style="width: 100%" data-container="#modalEmployee"></select>
                  </div>
                  <!-- Employment Details -->
