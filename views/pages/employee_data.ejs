<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>

  <body>
    <div id="page-container" class="sidebar-o sidebar-dark enable-page-overlay side-scroll page-header-fixed page-footer-fixed sidebar-o side-trans-enabled">
      <nav id="sidebar" aria-label="Main Navigation"><%- include('../partials/navigasi'); %></nav>
      <!-- END Sidebar -->

      <!-- Header -->
      <header id="page-header">
        <!-- Header Content -->
        <%- include('../partials/header'); %>
      </header>
      <!-- END Header -->

      <!-- Main Container -->
      <main id="main-container">
        <!-- Page Content -->
        <div class="content">
          <h4 id="employeePage" class="content-heading text-uppercase"></h4>
          <div class="block block-rounded">
            <div class="block-header">
              <!-- <h3 class="block-title">add</h3> -->
              <div class="block-title">
                <button title="Add" type="submit" onclick="showModalInsertEmployee()" class="btn btn-primary">
                  <i class="fa-solid fa-plus"></i>
                </button>
              </div>
              <div class="block-options">
                <button type="button" class="btn-block-option" data-toggle="block-option" data-action="fullscreen_toggle"></button>
              </div>
            </div>
            <div class="block-content block-content-full">
              <div id="rowEmployee" class="row table-responsive">
                <table class="table table-bordered table-striped table-vcenter js-dataTable-responsive">
                  <thead>
                    <tr>
                      <th id="id_employeeTable" class="text-center text-uppercase">employee_id</th>
                      <th id="fullnameTable" class="text-center text-uppercase">Fullname</th>
                      <th id="datebirthTable" class="text-center text-uppercase">Date of Birth</th>
                      <th id="companyTable" class="text-center text-uppercase">Company</th>
                      <th id="worksiteTable" class="text-center text-uppercase">Worksite</th>
                      <th id="jobtitleTable" class="text-center text-uppercase">Job Title</th>
                      <th id="datejoiningTable" class="text-center text-uppercase">Date of Joining</th>
                      <th id="dateAppoimenTable" class="text-center text-uppercase">Date of Appointment</th>
                      <th id="dateexitTable" class="text-center text-uppercase">Date of Exit</th>
                      <th id="employeestatusTable" class="text-center text-uppercase">Employee Status</th>
                      <th id="genderTable" class="text-center text-uppercase">Gender</th>
                      <th id="actions" class="text-center text-uppercase">Actions</th>
                    </tr>
                  </thead>
                  <tbody id="dataTable">
                    <tr>
                      <td id="tableWait" colspan="12" class="text-center text-uppercase"></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <!-- END Store Growth -->
        </div>
      </main>
      <footer id="page-footer" class="bg-body-light"><%- include('../partials/footer'); %></footer>
    </div>
    <div class="modal" id="modalEmployee" tabindex="-1" style="overflow: hidden" role="dialog" data-bs-backdrop="static" aria-labelledby="modalEmployee" aria-hidden="true">
      <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
          <div class="block block-rounded block-themed block-transparent mb-0">
            <div class="block-header bg-primary-dark">
              <h3 id="titleEmployee" class="block-title text-uppercase">Add Menu</h3>
              <div class="block-options">
                <button type="button" class="btn-block-option text-gray" data-toggle="block-option" data-action="fullscreen_toggle"></button>
              </div>
            </div>
            <form class="js-validation" id="empoyeeForm" style="max-height: 90vh; overflow-y: auto" enctype="multipart/form-data">
