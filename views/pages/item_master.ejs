<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>

  <body>
    <div id="page-container" class="sidebar-o sidebar-dark enable-page-overlay side-scroll page-header-fixed page-footer-fixed sidebar-o side-trans-enabled">
      <nav id="sidebar" aria-label="Main Navigation"><%- include('../partials/navigasi'); %></nav>
      <!-- END Sidebar -->

      <!-- Header -->
      <header id="page-header">
        <!-- Header Content -->
        <%- include('../partials/header'); %>
      </header>
      <!-- END Header -->

      <!-- Main Container -->
      <main id="main-container">
        <!-- Page Content -->
        <div class="content">
          <h4 id="itemMasterPage" class="content-heading text-uppercase"></h4>
          <div class="block block-rounded">
            <div class="block-header">
              <!-- <h3 class="block-title">add</h3> -->
              <div class="block-title">
                <button title="Add" type="submit" onclick="showModalItemMaster()" class="btn btn-primary">
                  <i class="fa-solid fa-plus"></i>
                </button>
              </div>
              <div class="block-options">
                <button type="button" class="btn-block-option" data-toggle="block-option" data-action="fullscreen_toggle"></button>
              </div>
            </div>
            <div class="block-content block-content-full">
              <div class="row content-heading">
                <div class="col-sm-3 mb-2">
                  <label id="searchDescriptionLabel" class="form-label text-uppercase" for="searchDescription">Description</label>
                  <input type="text" class="form-control fw-light text-uppercase" id="searchDescription" name="searchDescription" required />
                </div>
                <div class="col-sm-3 mb-2">
                  <label id="searchCategoryLabel" class="form-label text-uppercase" for="searchCategory">Category</label>
                  <select class="js-select2 form-select fw-light text-uppercase" name="searchCategory" id="searchCategory" style="width: 100%"></select>
                </div>
                <div class="col-sm-3 mb-2">
                  <label class="form-label text-uppercase text-gray-lighter" for="selectCategory">.</label>
                  <div id="loadsearch">
                    <span onclick="selectItemMaster()" class="input-group-text fw-semibold btn btn-primary">
                      <i class="fa-solid fa-magnifying-glass"></i>
                    </span>
                  </div>
                </div>
              </div>
              <div id="rowItemMaster" class="row table-responsive">
                <table class="table table-bordered table-striped table-vcenter js-dataTable-responsive">
                  <thead>
                    <tr>
                      <th id="category" class="text-center text-uppercase">Category</th>
                      <th id="code_item" class="text-center text-uppercase">Code Item</th>
                      <th id="description" class="text-center text-uppercase">Description</th>
                      <th id="uom" class="text-center text-uppercase">Uom</th>
                      <th id="status" class="text-center text-uppercase">Status</th>
                      <th id="actions" class="text-center text-uppercase">Actions</th>
                    </tr>
                  </thead>
                  <tbody id="dataTable"></tbody>
                </table>
              </div>
            </div>
          </div>
          <!-- END Store Growth -->
        </div>
      </main>
      <footer id="page-footer" class="bg-body-light"><%- include('../partials/footer'); %></footer>
    </div>
    <div class="modal" id="modalItemMaster" tabindex="-1" role="dialog" data-bs-backdrop="static" aria-labelledby="modalItemMaster" aria-hidden="true">
      <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
          <div class="block block-rounded block-themed block-transparent mb-0">
            <div class="block-header bg-primary-dark">
              <h3 id="titleItemMaster" class="block-title text-uppercase">Add Menu</h3>
              <div class="block-options">
                <button type="button" class="btn-block-option text-gray" data-toggle="block-option" data-action="fullscreen_toggle"></button>
              </div>
            </div>
            <form id="form2" class="js-validation">
              <div class="block-content">
                <div hidden class="col-sm-12 mb-2">
                  <label id="codeLabel" class="form-label text-uppercase" for="selectCode">Code</label>
                  <input type="text" class="form-control fw-light text-uppercase" id="selectCode" name="selectCode" />
                </div>
                <div class="col-sm-12 mb-2">
                  <label id="categoryLabel" class="form-label text-uppercase" for="selectCategory">Category</label>
                  <select class="js-select2 form-select fw-light text-uppercase" name="selectCategory" id="selectCategory" style="width: 100%" data-container="#modalItemMaster"></select>
                </div>
                <div class="col-sm-12 mb-2">
                  <label id="descriptionLabel" class="form-label text-uppercase" for="selectDescription">Description</label>
                  <input type="text" class="form-control fw-light text-uppercase" id="selectDescription" name="selectDescription" required />
                </div>
                <div class="col-sm-12 mb-2">
                  <label id="uomLabel" class="form-label text-uppercase" for="selectUOM">UOM</label>
                  <select class="js-select2 form-select fw-light text-uppercase" name="selectUOM" id="selectUOM" style="width: 100%" data-container="#modalItemMaster"></select>
                </div>
                <div class="col-sm-12 mb-2">
                  <label id="statusLabel" class="form-label text-uppercase" for="selectStatus">Status</label>
                  <select class="js-select2 form-select fw-light text-uppercase" name="selectStatus" id="selectStatus" style="width: 100%" data-container="#modalItemMaster"></select>
                </div>
              </div>
              <div id="load" class="block-content block-content-full text-end bg-body"></div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- 1. CORE LIBRARIES (jQuery MUST be first) -->
    <script src="assets/js/lib/jquery.min.js"></script>
    <script src="assets/js/dashmix.app.min.js"></script>

    <!-- 2. UTILITY/HELPER SCRIPTS -->
    <script src="js/mainUrl.js"></script>
    <script src="lib/loadingPage.js"></script>
    <script src="lib/epps.js"></script>

    <!-- 3. FORM VALIDATION & INPUT HANDLING -->
    <script src="assets/js/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="assets/js/plugins/jquery-validation/additional-methods.js"></script>
    <script src="assets/js/plugins/jquery.maskedinput/jquery.maskedinput.min.js"></script>
    <script src="assets/js/plugins/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>

    <!-- 4. UI COMPONENTS -->
    <script src="assets/js/plugins/select2/js/select2.full.min.js"></script>
    <script src="assets/js/plugins/flatpickr/flatpickr.min.js"></script>
    <script src="assets/js/plugins/bootstrap-notify/bootstrap-notify.min.js"></script>

    <!-- 5. DATATABLES SUITE -->
    <script src="assets/js/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="assets/js/plugins/datatables-bs5/js/dataTables.bootstrap5.min.js"></script>
    <script src="assets/js/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="assets/js/plugins/datatables-responsive-bs5/js/responsive.bootstrap5.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons/dataTables.buttons.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons-bs5/js/buttons.bootstrap5.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons-jszip/jszip.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons-pdfmake/pdfmake.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons-pdfmake/vfs_fonts.js"></script>
    <script src="assets/js/plugins/datatables-buttons/buttons.print.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons/buttons.html5.min.js"></script>

    <!-- 6. DATA VISUALIZATION -->
    <script src="assets/js/plugins/chart.js/chart.umd.js"></script>

    <!-- 7. PAGE SPECIFIC SCRIPTS -->
    <script src="assets/js/pages/be_pages_dashboard.min.js"></script>

    <!-- 8. ITEM MASTER MODULE -->
    <script src="js/item_master/selectItemMaster.js"></script>
    <script src="js/item_master/insertItemMaster.js"></script>
    <script src="js/item_master/updateItemMaster.js"></script>
    <script src="js/item_master/deleteItemMaster.js"></script>

    <!-- 9. INITIALIZATION (Single combined call) -->
    <script>
      Dashmix.helpersOnLoad(["js-flatpickr", "jq-datepicker", "jq-maxlength", "jq-select2", "jq-rangeslider", "jq-masked-inputs", "jq-pw-strength", "jq-notify"]);
    </script>
  </body>
</html>
