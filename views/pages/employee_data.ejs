                  <div class="col-sm-4 mb-2">
                    <label id="IdentityNumberLabel" class="form-label text-uppercase" for="IdentityNumber">Identity Card Number</label>
                    <input type="number" class="form-control fw-light" id="IdentityNumber" name="IdentityNumber" />
                  </div>
                  <div class="col-sm-4 mb-2">
                    <label id="fullnameLabel" class="form-label text-uppercase" for="fullname">Fullname</label>
                    <input type="text" class="form-control fw-light text-uppercase" id="fullname" name="fullname" />
                  </div>
                  <div class="col-sm-4 mb-2">
                    <label id="genderLabel" class="form-label text-uppercase" for="gender">Gender </label>
                    <select class="js-select2 form-select fw-light text-uppercase" name="gender" id="gender" style="width: 100%" data-container="#modalEmployee"></select>
                  </div>
                  <div class="col-sm-4 mb-2">
