<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>

  <body>
    <div id="page-container" class="sidebar-o sidebar-dark enable-page-overlay side-scroll page-header-fixed page-footer-fixed sidebar-o side-trans-enabled">
      <nav id="sidebar" aria-label="Main Navigation"><%- include('../partials/navigasi'); %></nav>
      <!-- END Sidebar -->

      <!-- Header -->
      <header id="page-header">
        <!-- Header Content -->
        <%- include('../partials/header'); %>
      </header>
      <!-- END Header -->

      <!-- Main Container -->
      <main id="main-container">
        <!-- Page Content -->
        <div class="content">
          <h4 id="titlePage" class="content-heading text-uppercase"></h4>
          <div class="block block-rounded">
            <div class="block-header">
              <div id="mainNavigator" class="block-title">
                <button title="Add" type="submit" onclick="showLayoutPurchaseOrderData()" class="btn btn-primary">
                  <i class="fa-solid fa-plus"></i>
                </button>
              </div>
              <div class="block-options">
                <button type="button" class="btn-block-option" data-toggle="block-option" data-action="fullscreen_toggle"></button>
              </div>
            </div>
            <div class="block-content block-content-full">
              <div class="row align-items-center mb-2">
                <div class="col-12 col-md-auto">
                  <span id="warehouseName" class="text-uppercase fw-bold"></span>
                  <input hidden type="text" class="form-control" id="codeWHform" name="codeWHform" />
                </div>
                <div class="col-12 col-md-auto">
                  <span id="titlePeriod" class="text-uppercase fw-bold"></span>: <span id="startDateList"></span> -
                  <span id="endDateList"></span>
                </div>
              </div>
              <div id="createData" hidden>
                <form id="formHeaderGR">
                  <div class="row">
                    <div hidden class="col-sm-4 mb-2">
                      <label id="codeLabel" class="form-label text-uppercase" for="code">Code</label>
                      <input type="text" class="form-control" id="code" name="code" />
                    </div>
                    <div class="col-sm-4 mb-2">
                      <label id="purchaseOrderLabel" class="form-label text-uppercase" for="purchaseOrder">Purchase order</label>
                      <input type="text" class="form-control text-uppercase" id="purchaseOrder" name="purchaseOrder" disabled />
                    </div>
                    <div class="col-sm-4 mb-2">
                      <label id="dateLabel" class="form-label text-uppercase" for="dateOrder">Date</label>
                      <input type="text" class="js-flatpickr form-control fw-light" id="dateOrder" name="dateOrder" data-date-format="d-m-Y" onchange="checkDate()" />
                    </div>
                    <div class="col-sm-4 mb-2">
                      <label id="partnersLabel" class="form-label text-uppercase" for="partners">Partners</label>
                      <input type="text" class="form-control text-uppercase" id="partners" name="partners" disabled />
                    </div>
                    <div class="col-sm-4 mb-2">
                      <label id="invoiceLabel" class="form-label text-uppercase" for="invoice">Invoice</label>
                      <input type="text" class="form-control text-uppercase" id="invoice" name="invoice" />
                    </div>
                    <div class="col-sm-4 mb-2">
                      <label id="shippingDocLabel" class="form-label text-uppercase" for="shippingDoc">Shipping Document</label>
                      <input type="text" class="form-control text-uppercase" id="shippingDoc" name="shippingDoc" />
                    </div>
                  </div>
                </form>
                <form id="formadditemmaster" class="formadditemmaster">
                  <div class="row table-responsive mb-2">
                    <table id="dataTableItemMasterOrder" class="table table-striped table-vcenter">
                      <thead>
                        <tr>
                          <th class="text-center text-uppercase">#</th>
                          <th id="codeItemOrder" class="text-center text-uppercase">Code Item</th>
                          <th id="descriptionOrder" class="text-center text-uppercase">Description</th>
                          <th id="uomOrder" class="text-center text-uppercase" style="width: 150px">UOM</th>
                          <th id="qtyOrder" class="text-center text-uppercase" style="width: 150px">Qty</th>
                          <th id="qtyReceivedOrder" class="text-center text-uppercase" style="width: 150px">Qty Received</th>
                          <th id="actionsOrder" class="text-center text-uppercase" style="width: 50px"></th>
                        </tr>
                      </thead>
                      <tbody id="dataTableItem"></tbody>
                    </table>
                  </div>
                  <div id="load" class="col-sm-2 mb-2"></div>
                </form>
              </div>
              <div id="listData" hidden>
                <form id="formGoogReceipt">
                  <div id="caritanggal" class="row mb-2">
                    <div class="col-sm-6">
                      <div class="mb-2">
                        <div class="input-daterange input-group" data-date-format="dd-mm-yyyy" data-week-start="1" data-autoclose="true" data-today-highlight="true">
                          <input type="text" class="form-control" id="startDate" name="startDate" placeholder="From" data-week-start="1" data-autoclose="true" data-today-highlight="true" />
                          <span class="input-group-text fw-semibold"> <i class="fa fa-fw fa-arrow-right"></i> </span>
                          <input type="text" class="form-control" id="endDate" name="endDate" placeholder="To" data-week-start="1" data-autoclose="true" data-today-highlight="true" />
                        </div>
                      </div>
                    </div>
                    <div class="col-sm-3 mb-2">
                      <div id="loadsearch">
                        <span onclick="SelectGoodsReceiptByDate()" class="input-group-text fw-semibold btn btn-primary"><i class="fa-solid fa-magnifying-glass"></i> </span>
                      </div>
                    </div>
                  </div>
                  <div class="row table-responsive">
                    <table id="dataTableGRHead" class="table table-bordered table-striped table-vcenter js-dataTable-responsive">
                      <thead>
                        <tr>
                          <th class="text-center text-uppercase">#</th>
                          <th id="noGRListData" class="text-center text-uppercase">No Goods Receipt</th>
                          <th id="noPOListData" class="text-center text-uppercase">No Purchase Order</th>
                          <th id="dateListData" class="text-center text-uppercase">Date</th>
                          <th id="partnersListData" class="text-center text-uppercase">Partners</th>
                          <th id="noInvoiceListData" class="text-center text-uppercase">No Invoice</th>
                          <th id="noShippingListData" class="text-center text-uppercase">No Shipping</th>
                          <th id="employeeData" class="text-center text-uppercase">Warehouse Staff</th>
                          <th id="statusListData" class="text-center text-uppercase">Status</th>
                          <th id="actionsListData" class="text-center text-uppercase">Actions</th>
                        </tr>
                      </thead>
                      <tbody id="dataTable"></tbody>
                    </table>
                  </div>
                </form>
              </div>
              <div id="purchaseOrderData" hidden>
                <div class="row table-responsive">
                  <table id="dataTablePOHead" class="table table-bordered table-striped table-vcenter js-dataTable-responsive">
                    <thead>
                      <tr>
                        <th class="text-center text-uppercase">#</th>
                        <th id="dateHeader" class="text-center text-uppercase">Date</th>
                        <th id="pOHeader" class="text-center text-uppercase">Purchase Order</th>
                        <th id="worksiteHeader" class="text-center text-uppercase">Worksite</th>
                        <th id="purchasingHeader" class="text-center text-uppercase">Purchasing</th>
                        <th id="statusHeader" class="text-center text-uppercase">Actions</th>
                      </tr>
                    </thead>
                    <tbody id="dataTablePurchaseOrder"></tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <!-- END Store Growth -->
        </div>
      </main>
      <footer id="page-footer" class="bg-body-light"><%- include('../partials/footer'); %></footer>
    </div>
    <div class="modal" id="modalApprovalGoodsReceipt" tabindex="-1" role="dialog" data-bs-backdrop="static" aria-labelledby="modalApprovalGoodsReceipt" aria-hidden="true">
      <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
          <div class="block block-rounded block-themed block-transparent mb-0">
            <div class="block-header bg-primary-dark">
              <h3 id="titlePurchaseRequestOpexApproval" class="block-title text-uppercase">Add Menu</h3>
              <div class="block-options">
                <button type="button" class="btn-block-option text-gray" data-toggle="block-option" data-action="fullscreen_toggle"></button>
              </div>
            </div>
            <div class="block-content">
              <div class="row table-responsive mb-2">
                <table id="dataTableApproval" class="table table-striped table-vcenter">
                  <thead>
                    <tr>
                      <th id="nameApproval" class="text-center text-uppercase">Name</th>
                      <th id="levelApproval" class="text-center text-uppercase">Level Approval</th>
                      <th id="statusApproval" class="text-center text-uppercase">Status</th>
                      <th id="noteApproval" class="text-center text-uppercase">Note</th>
                      <th id="dateApproval" class="text-center text-uppercase">Date Approval</th>
                    </tr>
                  </thead>
                  <tbody id="dataTableApprovalDetail"></tbody>
                </table>
              </div>
            </div>
            <div id="loadApproval" class="block-content block-content-full text-end bg-body"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="modal" id="modalNotice" tabindex="-1" role="dialog" aria-labelledby="modalNotice" data-bs-backdrop="static" aria-hidden="true">
      <div class="modal-dialog modal-dialog-top" role="document">
        <div class="modal-content">
          <div class="block block-rounded block-themed block-transparent mb-0">
            <div class="block-header bg-primary-dark">
              <h3 id="titleContent" class="block-title">Modal Title</h3>
              <div class="block-options"></div>
            </div>
            <div id="contentNotice" class="block-content"></div>
            <div id="loadNotice" class="block-content block-content-full text-end bg-body"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- 1. CORE LIBRARIES (jQuery MUST be first) -->
    <script src="assets/js/lib/jquery.min.js"></script>
    <script src="assets/js/dashmix.app.min.js"></script>

    <!-- 2. UTILITY/HELPER SCRIPTS -->
    <script src="js/mainUrl.js"></script>
    <script src="lib/loadingPage.js"></script>
    <script src="lib/epps.js"></script>

    <!-- Form Helpers -->
    <script src="assets/js/plugins/select2/js/select2.full.min.js"></script>
    <script src="assets/js/plugins/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
    <script src="assets/js/plugins/jquery.maskedinput/jquery.maskedinput.min.js"></script>
    <script src="assets/js/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="assets/js/plugins/jquery-validation/additional-methods.js"></script>

    <!-- Date/Time Pickers -->
    <script src="assets/js/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="assets/js/plugins/flatpickr/flatpickr.min.js"></script>

    <!-- DataTables -->
    <script src="assets/js/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="assets/js/plugins/datatables-bs5/js/dataTables.bootstrap5.min.js"></script>
    <script src="assets/js/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="assets/js/plugins/datatables-responsive-bs5/js/responsive.bootstrap5.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons/dataTables.buttons.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons-bs5/js/buttons.bootstrap5.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons-jszip/jszip.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons-pdfmake/pdfmake.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons-pdfmake/vfs_fonts.js"></script>
    <script src="assets/js/plugins/datatables-buttons/buttons.print.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons/buttons.html5.min.js"></script>

    <!-- Charts & Notifications -->
    <script src="assets/js/plugins/chart.js/chart.umd.js"></script>
    <script src="assets/js/plugins/bootstrap-notify/bootstrap-notify.min.js"></script>

    <!-- Page Specific Scripts -->
    <script src="assets/js/pages/be_pages_dashboard.min.js"></script>

    <!-- 8. GOODS RECEIPT WAREHOUSE MODULE -->
    <script src="js/goods_receipt_warehouse/selectGoodsReceiptWarehouse.js"></script>
    <script src="js/goods_receipt_warehouse/insertGoodsReceiptWarehouse.js"></script>
    <script src="js/goods_receipt_warehouse/updateGoodsReceiptWarehouse.js"></script>
    <script src="js/goods_receipt_warehouse/deleteGoodsReceiptWarehouse.js"></script>

    <!-- 9. INITIALIZATION (Single combined call) -->
    <script>
      Dashmix.helpersOnLoad(["js-flatpickr", "jq-datepicker", "jq-maxlength", "jq-select2", "jq-rangeslider", "jq-masked-inputs", "jq-pw-strength", "jq-notify"]);
    </script>
  </body>
</html>
