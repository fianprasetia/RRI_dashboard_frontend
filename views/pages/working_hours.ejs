<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>

  <body>
    <div id="page-container" class="sidebar-o sidebar-dark enable-page-overlay side-scroll page-header-fixed page-footer-fixed sidebar-o side-trans-enabled">
      <nav id="sidebar" aria-label="Main Navigation"><%- include('../partials/navigasi'); %></nav>
      <!-- END Sidebar -->

      <!-- Header -->
      <header id="page-header">
        <!-- Header Content -->
        <%- include('../partials/header'); %>
      </header>
      <!-- END Header -->

      <!-- Main Container -->
      <main id="main-container">
        <!-- Page Content -->
        <div class="content">
          <h4 id="workingHoursPage" class="content-heading text-uppercase"></h4>
          <div class="block block-rounded">
            <div class="block-header">
              <!-- <h3 class="block-title">add</h3> -->
              <div class="block-title">
                <button title="Add" type="submit" onclick="showModalInsertWorkHours()" class="btn btn-primary">
                  <i class="fa-solid fa-plus"></i>
                </button>
              </div>
              <div class="block-options">
                <button type="button" class="btn-block-option" data-toggle="block-option" data-action="fullscreen_toggle"></button>
              </div>
            </div>
            <div class="block-content block-content-full">
              <div id="rowUsers" class="row table-responsive">
                <table class="table table-bordered table-striped table-vcenter js-dataTable-responsive">
                  <thead>
                    <tr>
                      <th id="nameTabel" class="text-center text-uppercase">Name</th>
                      <th id="onDutTable" class="text-center text-uppercase">On Duty Time</th>
                      <th id="offDutyTable" class="text-center text-uppercase">Off Duty Time</th>
                      <th id="lateTable" class="text-center text-uppercase">Late Time</th>
                      <th id="earlyTable" class="text-center text-uppercase">leave early time</th>
                      <th id="beginningInTable" class="text-center text-uppercase">beginning in</th>
                      <th id="endingInTable" class="text-center text-uppercase">ending in</th>
                      <th id="beginningOutTable" class="text-center text-uppercase">beginning out</th>
                      <th id="endingOutTable" class="text-center text-uppercase">ending out</th>
                      <th id="actionsTable" class="text-center text-uppercase">Actions</th>
                    </tr>
                  </thead>
                  <tbody id="dataTable"></tbody>
                </table>
              </div>
            </div>
          </div>
          <!-- END Store Growth -->
        </div>
      </main>
      <footer id="page-footer" class="bg-body-light"><%- include('../partials/footer'); %></footer>
    </div>
    <div class="modal" id="modalWorkHours" tabindex="-1" role="dialog" data-bs-backdrop="static" aria-labelledby="modalWorkHours" aria-hidden="true">
      <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
          <div class="block block-rounded block-themed block-transparent mb-0">
            <div class="block-header bg-primary-dark">
              <h3 id="titleworkingHours" class="block-title text-uppercase">Add Menu</h3>
              <div class="block-options">
                <button type="button" class="btn-block-option text-gray" data-toggle="block-option" data-action="fullscreen_toggle"></button>
              </div>
            </div>
            <form class="js-validation">
              <div class="block-content">
                <div hidden class="col-sm-12 mb-2">
                  <label id="WorkHoursLabel" class="form-label text-uppercase" for="idWorkHours">id</label>
                  <input type="text" class="form-control fw-light text-uppercase" id="idWorkHours" name="idWorkHours" required />
                </div>
                <div id="language"></div>
                <div class="col-sm-12 mb-2">
                  <label id="onDutyLabel" class="form-label text-uppercase" for="onDuty">On Duty Time</label>
                  <input type="text" class="js-masked-time form-control" id="onDuty" name="onDuty" data-enable-time="true" data-no-calendar="true" data-date-format="H:i" data-time_24hr="true" />
                </div>
                <div class="col-sm-12 mb-2">
                  <label id="offDutyLabel" class="form-label text-uppercase" for="offDuty">off Duty Time</label>
                  <input type="text" class="js-masked-time form-control" id="offDuty" name="offDuty" data-enable-time="true" data-no-calendar="true" data-date-format="H:i" data-time_24hr="true" />
                </div>
                <div class="col-sm-12 mb-2">
                  <label id="lateToleranceLabel" class="form-label text-uppercase" for="lateTolerance">Late Tolerance</label>
                  <input type="text" class="js-masked-time form-control text-uppercase" id="lateTolerance" name="lateTolerance" data-enable-time="true" data-no-calendar="true" data-date-format="H:i" data-time_24hr="true" />
                </div>
                <div class="col-sm-12 mb-2">
                  <label id="earlyToleranceLabel" class="form-label text-uppercase" for="earlyTolerance">Early Departure Tolerance</label>
                  <input type="text" class="js-masked-time form-control text-uppercase" id="earlyTolerance" name="earlyTolerance" data-enable-time="true" data-no-calendar="true" data-date-format="H:i" data-time_24hr="true" />
                </div>
                <div class="col-sm-12 mb-2">
                  <label id="checkInOpenLabel" class="form-label text-uppercase" for="checkInOpen">Check-in attendance is now open</label>
                  <input type="text" class="js-masked-time form-control text-uppercase" id="checkInOpen" name="checkInOpen" data-enable-time="true" data-no-calendar="true" data-date-format="H:i" data-time_24hr="true" />
                </div>
                <div class="col-sm-12 mb-2">
                  <label id="checkInClosedLabel" class="form-label text-uppercase" for="checkInClosed">Check-in attendance has closed</label>
                  <input type="text" class="js-masked-time form-control text-uppercase" id="checkInClosed" name="checkInClosed" data-enable-time="true" data-no-calendar="true" data-date-format="H:i" data-time_24hr="true" />
                </div>
                <div class="col-sm-12 mb-2">
                  <label id="checkOutOpenLabel" class="form-label text-uppercase" for="checkOutOpen">Check-out attendance is now open</label>
                  <input type="text" class="js-masked-time form-control text-uppercase" id="checkOutOpen" name="checkOutOpen" data-enable-time="true" data-no-calendar="true" data-date-format="H:i" data-time_24hr="true" />
                </div>
                <div class="col-sm-12 mb-2">
                  <label id="checkOutClosedLabel" class="form-label text-uppercase" for="checkOutClosed">Check-out attendance is now Closed</label>
                  <input type="text" class="js-masked-time form-control text-uppercase" id="checkOutClosed" name="checkOutClosed" data-enable-time="true" data-no-calendar="true" data-date-format="H:i" data-time_24hr="true" />
                </div>
              </div>
              <div id="load" class="block-content block-content-full text-end bg-body"></div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- Core Libraries (jQuery must be first) -->
    <script src="assets/js/lib/jquery.min.js"></script>
    <script src="assets/js/dashmix.app.min.js"></script>

    <!-- Application Core -->
    <script src="js/mainUrl.js"></script>
    <script src="lib/epps.js"></script>

    <!-- Form Controls & Validation -->
    <script src="assets/js/plugins/select2/js/select2.full.min.js"></script>
    <script src="assets/js/plugins/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
    <script src="assets/js/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="assets/js/plugins/jquery-validation/additional-methods.js"></script>
    <script src="assets/js/plugins/jquery.maskedinput/jquery.maskedinput.min.js"></script>

    <!-- Date/Time Pickers -->
    <script src="assets/js/plugins/flatpickr/flatpickr.min.js"></script>

    <!-- Data Tables & Export -->
    <script src="assets/js/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="assets/js/plugins/datatables-bs5/js/dataTables.bootstrap5.min.js"></script>
    <script src="assets/js/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="assets/js/plugins/datatables-responsive-bs5/js/responsive.bootstrap5.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons/dataTables.buttons.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons-bs5/js/buttons.bootstrap5.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons-jszip/jszip.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons-pdfmake/pdfmake.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons-pdfmake/vfs_fonts.js"></script>
    <script src="assets/js/plugins/datatables-buttons/buttons.print.min.js"></script>
    <script src="assets/js/plugins/datatables-buttons/buttons.html5.min.js"></script>

    <!-- Visualization & Notifications -->
    <script src="assets/js/plugins/chart.js/chart.umd.js"></script>
    <script src="assets/js/plugins/bootstrap-notify/bootstrap-notify.min.js"></script>

    <!-- Page Specific Scripts -->
    <script src="assets/js/pages/be_pages_dashboard.min.js"></script>

    <!-- Working Hours Modules -->
    <script src="js/working_hours/selectWorkingHours.js"></script>
    <script src="js/working_hours/insertWorkingHours.js"></script>
    <script src="js/working_hours/updateWorkingHours.js"></script>
    <script src="js/working_hours/deleteWorkingHours.js"></script>

    <!-- Initialization -->
    <script>
      Dashmix.helpersOnLoad(["js-flatpickr", "jq-datepicker", "jq-maxlength", "jq-select2", "jq-rangeslider", "jq-masked-inputs", "jq-pw-strength", "jq-notify"]);
    </script>
  </body>
</html>
