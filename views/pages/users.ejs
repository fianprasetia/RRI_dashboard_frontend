    <!-- Page Specific Scripts -->
    <script src="assets/js/pages/be_pages_dashboard.min.js"></script>

    <!-- User Management Modules -->
    <script src="js/users/selectUsers.js"></script>
    <script src="js/users/insertUsers.js"></script>
    <script src="js/users/updateUsers.js"></script>
    <script src="js/users/deleteUsers.js"></script>

    <!-- Initialization -->
    <script>
      Dashmix.helpersOnLoad(["js-flatpickr", "jq-datepicker", "jq-maxlength", "jq-select2", "jq-rangeslider", "jq-masked-inputs", "jq-pw-strength", "jq-notify"]);
    </script>
  </body>
</html>
